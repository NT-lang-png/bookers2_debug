<table>
  <% book.comments.each do |comment| %>
  <tr>
    <td>
      <%= image_tag comment.user.get_profile_image(70,70) %><br>
      <%= comment.user.name %>
    </td>
    <td>
      <%= comment.comment %>
    </td>
    <td>
      <% if comment.user == current_user %>
        <%= link_to "Destroy",book_comment_path(book.id,comment.id),method: :delete,class: "btn btn-sm btn-danger float-end",remote: true %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>